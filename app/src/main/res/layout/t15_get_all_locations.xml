<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".t15_get_all_locations">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/alllocationT"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/teal_700"
                app:buttonGravity="center_vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:paddingRight="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <Button
                    android:id="@+id/firstBut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/white"
                    android:hint="First Corner"
                    android:textColor="@color/white"
                    android:textColorHint="@color/teal_700"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/firstText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/eduttextborder5"
                    android:gravity="center"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:text="first coordinate"
                    android:textColor="#535353" />

                <Button
                    android:id="@+id/secondBut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/white"
                    android:hint="Second Corner"
                    android:textColor="@color/white"
                    android:textColorHint="@color/teal_700"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/secondText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/eduttextborder5"
                    android:gravity="center"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:text="Second coordinate"
                    android:textColor="#535353" />

                <Button
                    android:id="@+id/thirdBut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/white"
                    android:hint="Third Corner"
                    android:textColor="@color/white"
                    android:textColorHint="@color/teal_700"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/thirdText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/eduttextborder5"
                    android:gravity="center"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:text="Third coordinate"
                    android:textColor="#535353" />


                <Button
                    android:id="@+id/fourthBut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/white"
                    android:hint="Fourth Corner"
                    android:textColor="@color/white"
                    android:textColorHint="@color/teal_700"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/fourthText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/eduttextborder5"
                    android:gravity="center"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:text="Fourth coordinate"
                    android:textColor="#535353" />

                <EditText
                    android:id="@+id/roomNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/eduttextborder5"
                    android:hint="Enter Room No"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/lightgray" />


                <Button
                    android:id="@+id/submitCoordinates"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/teal_700"
                    android:text="Submit"
                    android:textColor="@color/white" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>